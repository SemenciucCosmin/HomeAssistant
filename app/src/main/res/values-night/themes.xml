<resources>

    <style name="Theme.HomeAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gray_10</item>
        <item name="colorPrimarySurface">@color/gray_50</item>
        <item name="colorPrimaryContainer">@color/gray_93</item>
        <item name="colorOnPrimary">@color/gray_93</item>

        <item name="colorSurface">@color/gray_93</item>
        <item name="colorOnSurface">@color/gray_10</item>

        <item name="colorSecondary">@color/gray_10</item>
        <item name="colorSecondaryVariant">@color/gray_93</item>

        <item name="colorOutline">@color/gray_10</item>

        <item name="colorTertiary">@color/transparent</item>

        <item name="colorControlNormal">@color/gray_10</item>
        <item name="colorSwitchThumbNormal">@color/gray_50</item>

        <item name="android:statusBarColor">@color/gray_93</item>

        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.HomeAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/gray_10</item>
        <item name="android:textColorPrimary">@color/gray_10</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorAlertDialogListItem">@color/gray_10</item>
        <item name="android:colorControlActivated">@color/gray_10</item>
        <item name="android:colorControlNormal">@color/gray_10</item>
        <item name="android:windowBackground">@color/gray_80</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_10</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_10</item>
    </style>

</resources>
